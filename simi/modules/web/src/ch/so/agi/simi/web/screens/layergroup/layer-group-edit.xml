<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="ch.so.agi.simi.web.screens.layergroup">
    <data>
        <instance id="layerGroupDc"
                  class="ch.so.agi.simi.entity.LayerGroup"
                  view="_local">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="layerGroupDc">
            <column width="250px">
                <textField id="identifierField" property="identifier"/>
                <textField id="titleField" property="title"/>
                <checkBox id="inWGCField" property="inWGC"/>
                <textArea id="remarksField" property="remarks" rows="5"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
